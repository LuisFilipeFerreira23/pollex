# =============================================================================
# Pollex Project - Environment Variables Template
# =============================================================================

# Project Name (Group name)
COMPOSE_PROJECT_NAME=pollex

# Timezone for all containers
TZ=UTC

# -----------------------------------------------------------------------------
# DATA STORAGE PATH (for bind-mounted volumes)
# -----------------------------------------------------------------------------
# Default: ./data (relative to docker-compose.yml)
DATA_PATH=./data
CONFIG_PATH=./config

# -----------------------------------------------------------------------------
# POSTGRESQL CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_HOSTNAME=pollex-postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=pollex-tasks
POSTGRES_USER=
POSTGRES_PASSWORD=

# -----------------------------------------------------------------------------
# MONGODB CONFIGURATION
# -----------------------------------------------------------------------------
MONGODB_URL=mongodb+srv://???.mongodb.net/
MONGODB_DB_NAME=pollex-docs

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
API_PORT=5173

# -----------------------------------------------------------------------------
# API SESSION KEY
# -----------------------------------------------------------------------------
SESSION_KEY=

# -----------------------------------------------------------------------------
# HTTPS CONFIGURATION
# -----------------------------------------------------------------------------
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.crt

# -----------------------------------------------------------------------------
# DOCKER REGISTRY (leave empty for Docker Hub)
# -----------------------------------------------------------------------------
DOCKER_REGISTRY=username